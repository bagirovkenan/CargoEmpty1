@model CargoEmpty.Models.General.User.UserDb
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-12">
    <div class="row">
        <div class="col-lg-12 col-12">
            <span class="form-control" style="background-color:red;color:white;">
                Customer-@Model.FirstName @Model.LastName | User Code-@Model.UserCod | Balance-@Model.Balance | Bonuce Balance-@Model.BonusBalance
            </span>
        </div>

        <div class="col-lg-12 col-12" style="margin-top:20px;">
            <table class="table table-bordered" style="width:100%;" id="UserBalanceTableId">
                <thead style="background-color:red;color:white;">
                    <tr>
                        <th scope="col">@Html.DisplayName("Out/In")</th>
                        <th scope="col">@Html.DisplayName("Balance")</th>
                        <th scope="col">@Html.DisplayName("Date")</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var i in Model.BalanceOperators)
                        {
                    <tr>
                        <th>@i.OutIn</th>
                        <th>@i.Total</th>
                        <th>@i.Date</th>
                    </tr>
                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
    </div>