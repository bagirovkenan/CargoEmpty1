@model CargoEmpty.Models.General.Order.CreateOrderView
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- news top img start -->
<div class="FaqTopImgMainDiv">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-7 faqTitleColDiv leftText">
                <h1>Hesabim</h1>
                <a href="file:///C:/Users/code/Desktop/P504-Final/ViewFerid/Home/Home/Home.html" title="Home">Əsas</a>
                / Hesabim
            </div>
            <div class="col-12 col-lg-5 RightText">
                <h4>Siz sifariş edin, biz çatdıraq. <span>SÜRƏTLİ</span> və <span>TƏHLÜKƏSİZ!</span></h4>
            </div>
        </div>
    </div>
</div>
<!-- -------------------------------------------------------------------------------------------- -->
<!-- news top img end -->
<!-- orders start -->

<div class="orderMainDiv" style="padding:80px 0px ;background-color: #e8e8e8;">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6 offset-lg-3 OrderNotColDiv">
                <div class="OrderNoteDiv">
                    <h2>DIQQET</h2>
                    <p>
                        Ödəniş olunmayan sifarişlər gün ərzində silinir.<br>
                        Məhsul qiymətlərini ölkəyə uyğun valyutada və düzgün daxil edin.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col lg-12 col-md-12 col-12 CountryColDiv">
                <div class="OrderInputCountryMainDiv">
                    <div class="CountryDiv">
                        @{



                            foreach (var i in ViewBag.Country)
                            {
                                <span class="OrderCounrtryHeader" data-CurrencyId="@i.CurrencyId" data-text="@i.CountryCurrency.CurrencyName" data-id="@i.Id">@i.CauntryName</span>
                            }
                        }
                    </div>

                    <div class="OrderInputsMainDiv">
                        <div class="OrderInputDiv">
                            <div class="row">
                                <div class="AddOrderLinkColDiv">
                                    <div class="addLinkButtonDiv">
                                        <button id="AddLink" type="button" class="btn btn-default">Yeni Link</button>
                                    </div>
                                    <div class="col-lg-10"></div>
                                </div>
                            </div>
                            <form method="POST" action="/Orders/Create" class="form-group ss">
                                <div class="FormHiddenDiv">
                                  
                                </div>

                                <div class="orderFormInputMainDiv">
                                    <div class="formInputDiv">
                                        <div class="row">
                                            <div class="col-lg-8 col-md-12 col-sm-12 col-12">
                                                <label>Link <span style="color:red">*</span></label>
                                                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                                                <div class="LinkInputDiv">
                                                    <input class="form-control" type="text" name="Link">
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-8 col-sm-12 col-12">
                                                <label>Kateqoriya <span style="color:red">*</span></label>
                                                <div class="LinkInputDiv">
                                                    <select class="form-control" name="CategoryId" id="">
                                                        @foreach (var i in ViewBag.Categories)
                                                        {
                                                            <option value="@i.Id">@i.CategoryName</option>}
                                                    </select>
                                                </div>
                                            </div>
                                           
                                            <div class="col-lg-2 col-md-4 col-sm-12 col-12" style="margin-top:10px;">
                                                <label>Sifarisin Adi <span style="color:red">*</span></label>
                                                <div class="LinkInputDiv">
                                                    <input class="form-control" type="text" name="OrderName">
                                                    @Html.ValidationMessageFor(model => model.OrderName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                           
                                            <div class="col-lg-10 col-12" style="margin-top:10px;">
                                                <div class="row">
                                                    <div class="col-lg-2 col-md-4 col-sm-12 col-12">
                                                        <label>Miqdar<span style="color:red">*</span></label>
                                                        <div class="LinkInputDiv">
                                                            <input class="form-control" type="number" name="Quantity" id="producCount" value="1">
                                                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-2 col-md-3 col-sm-10 col-10">
                                                        <label>Qiymet<span style="color:red">*</span></label>
                                                        <div class="LinkInputDiv">
                                                            <input class="form-control price" step="0.01" type="number" name="Price" id="ProductPrice">
                                                            @{

                                                                for (var i = 0; i < ViewBag.Country.Count; i++)
                                                                {
                                                                    if (i == 0)
                                                                    {
                                                                        <input id="CountrCurrencyId" type="hidden" value=" @ViewBag.Country[0].CurrencyId" />

                                                                    }
                                                                }
                                                            }
                                                        </div>

                                                    </div>
                                                    <div class="col-lg-1 col-md-1 col-sm-1 col-1" style="padding-top:35px;">
                                                        <span>+5%</span>
                                                    </div>
                                                    <div class="col-lg-2 col-md-3 col-sm-12 col-12 totalPriceDiv">

                                                        <label>Odenilecek</label>
                                                        <div class="LinkInputDiv">
                                                            <input type="number" name="name" value="" class="form-control price" id="TotalPrice" readonly />

                                                        </div>
                                                    </div>
                                                    <div class="col-lg-1 col-md-1 col-sm-1 col-1">
                                                        @*<label>Valyuta <span style="color:red">*</span></label>*@
                                                        <div class="LinkInputDiv" id="LinkInputDivCurrency" style="padding-top:35px;">
                                                            @{

                                                                for (var i = 0; i < ViewBag.Country.Count; i++)
                                                                {
                                                                    if (i == 0)
                                                                    {
                                                                        <span class="OrderCounrtryCurrencyText">@ViewBag.Country[0].CountryCurrency.CurrencyName</span>

                                                                    }
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-2 col-md-3 col-sm-12 col-12">
                                                        <label>Manatla</label>
                                                        <div class="LinkInputDiv">
                                                            <input type="number" name="name" value="" class="form-control price" id="TotalPriceAZN" readonly />
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-1 col-md-1 col-sm-1 col-1" style="padding-top:35px;">
                                                        <span>AZN</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-12 col-lg-12" style="margin-top:10px;">
                                                <label>Qeyd<span style="color:red">*</span></label>
                                                <div class="TextAreaDiv">
                                                    <textarea class="form-control" name="Coment" id="56"></textarea>
                                                </div>
                                            </div>


                                            <div class="col-12 col-md-12 col-lg-12">

                                                <div class="CheckBoxDiv" style="padding-top:20px;">
                                                    <input type="checkbox" name="" value="false" class="CreateIsUrgentCheckBox" />
                                                    <input type="text" name="isUrgent" value="false" class="CreateIsUrgentHiddenInput" style="display:none;" />
                                                    <label> Tecili Sifaris</label>
                                                    <!-- Button trigger modal -->
                                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="indexIsUrgentModal" style="display:none;">
                                                        Launch demo modal
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="p-3 mb-2 bg-danger text-white" style="border-radius:5px;height:50px;">
                                                    <p> Təcili sifarişlər 2$ əlavə ödənişlə 20 dəq ərzində icra edilir</p>
                                                </div>
                                                <div class="p-3 mb-2 bg-warning text-dark" style="border-radius:5px;">
                                                    <p>
                                                        Hörmətli istifadəçilər, saytımız üzərindən verdiyiniz sifarişlər növbəlilik əsasında həyata keçirilir.
                                                        Siz, təcili sifariş etməklə növbədə irəli keçə bilərsiniz. Xahiş edirik nəzərə alasınız ki,
                                                        bu zaman sizin növbəniz "Sürətli sifariş" seçmiş alıcılar arasında təyin edilir.
                                                    </p>
                                                </div>
                                                <div class="p-3 mb-2 bg-info text-white" style="border-radius:5px;">
                                                    <p>
                                                        Sürətli sifariş yalnız linklərin sifarişi zamanı növbənin sürətləndirilməsi mümkündür, sifarişin
                                                        Türkiyə daxilində və ölkəmizə gətirilməsi ilə bağlı sürətləndirmə mümkün deyil
                                                    </p>
                                                </div>
                                                <div class="p-3 mb-2 bg-danger text-white" style="border-radius:5px;">
                                                    <p>
                                                        Sürətli sifarişin rüsumu (2$) sifarişiniz icra edildikdən sonra
                                                        həmin günün alış məzənnəsinə uyğun olaraq balansınızdan çıxılacaq.
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>




                                <div class="row">

                                    <div class="col-lg-2 col-md-6 col-12 offset-lg-10" style="padding-right:5px">
                                        <button type="submit" class="btn btn-default pull-right OrdersubmitBtn">
                                            SİFARİŞ
                                            EDİN
                                        </button>

                                    </div>

                                </div>

                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--orders end  -->


@section FrontMyOrdersScript
{
    <script type="text/javascript" src="~/JavaScript/Front/MyOrders.js"></script>
}

  
