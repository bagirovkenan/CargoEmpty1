@model CargoEmpty.Models.General.Order.OrderDb


<div class="modal-content">
    <form action="/Orders/Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="col-lg-12 col-12">
                <div class="row">
                    <div class=" col-12 col-lg-8">
                        <label>Link</label>
                        <div>
                            <input type="text" name="Link" value="@Model.Link" class="form-control" />
                        </div>
                    </div>
                    <div class=" col-12 col-lg-4">
                        <label>Cateqoriya</label>
                        <div>
                            <select name="CategoryId" class="form-control">
                                @foreach(var i in ViewBag.Category)
                                {
                                    <option value="@i.Id">@i.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class=" col-12 col-md-6 col-lg-6">
                        <label>Sifarisin Adi</label>
                        <div>
                            <input type="text" name="OrderName" value="@Model.OrderName" class="form-control" />
                        </div>
                    </div>
                    <div class=" col-11 col-md-5 col-lg-5">
                        <label>Qiymet</label>
                        <div>
                            <input type="text" name="Price" step="0.01" value="@Model.Price" class="form-control" />
                        </div>
                    </div>
                    <div class=" col-1 col-md-1 col-lg-1" style="margin-top:35px;">
                        <span>@Model.Country.CountryCurrency.CurrencyName</span>
                    </div>
                    <div class=" col-12 col-md-12 col-lg-12">
                        <label>Qeyd</label>
                        <div>
                            <textarea name="Coment" class="form-control">@Model.Coment</textarea>
                        </div>
                    </div>
                </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bagla</button>
                <button type="submit" class="btn btn-primary">Yadda Saxla</button>
            </div>
        </div>
    </form>
</div>
