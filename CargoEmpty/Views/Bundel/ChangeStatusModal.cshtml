@model IEnumerable<CargoEmpty.Models.General.Order.OrderStatus>

<form action="/Bundel/ChangeStatus" method="post" id="IndexBundelStatusForm" enctype="multipart/form-data">
    <input id="changeStatusModalBundelId" type="hidden" name="BundelId" value="@ViewBag.bundel.Id" />
    <div class="col-12 col-lg-12 BundelForeignWarehouseModalMainDiv">
        <div class="row">
            <div class="col-12 col-lg-12 ForeignWarehouseModalShowDiv">
                <span>Status</span>
                <div>
                    <select name="BundelStatusID" class="form-control" id="BundelIndexStatusSelect">
                        @foreach (var i in Model)
                        {
                            <option value="@i.Id">@i.StatusName</option>

                        }
                    </select>
                </div>
            </div>
            <div class="col-12 col-lg-12 ForeignWarehouseModalHiddenDiv">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <label>Ceki</label>
                        <div>
                            <input class="form-control" type="number" step="0.01" name="Weight" value="" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <label>Catdirilma Pulu</label>
                        <div>
                            <input class="form-control" type="number" step="0.01" name="DeliveryPrice" value="" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Uzunluq</label>
                        <div>
                            <input class="form-control" type="number" step="0.01" name="Lenght" value="" />
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <label>En</label>
                        <div>
                            <input class="form-control" type="number" step="0.01" name="Width" value="" />
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <label>Hundurluk</label>
                        <div>
                            <input class="form-control" type="number" step="0.01" name="Height" value="" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <label>Izleme nomesi</label>
                        <div>
                            <input class="form-control" type="number" name="TrackingNumber" value="" />
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <label>Invoice</label>
                        <div>
                            <input class="form-control" type="file" name="InvoiceFile" value="" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-12">
                        <label>Qeyd</label>
                        <div>
                            <textarea name="Note" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12" style="margin-top:20px;">
                      
                        <div>
                            <i id="ChangeBundelStatuseModalTableRemoveBtn" class="fas fa-minus-circle " style="color:red;font-size:25px;cursor:pointer;width:100%;height:100%;"></i>
                            <i id="ChangeBundelStatuseModalTableAddBtn" class="fas fa-plus-circle " style="color:red;font-size:25px;cursor:pointer;"></i>
                        </div>
                    </div>
                    <div class="col-lg-12 col-12" style="margin-top:10px;">
                        <table class="table table-bordered" style="font-size:12px;">
                            <thead id="IndexChangeStatusWarehouseAbroadTableHead">
                                <tr>
                                    <th scope="col">Icindekilerin Tam Harmoni Tanimi</th>
                                    <th scope="col">Harmoni Kodu</th>
                                    <th scope="col">Uretildiyi Ulke</th>
                                    <th scope="col">Gomruk Degeri</th>
                                </tr>
                            </thead>
                            <tbody id="IndexChangeStatusWarehouseAbroadTableBody">
                                <tr>
                                    <td><input class="form-control" type="text" name="name" value="" /></td>
                                    <td><input class="form-control" type="text" name="name" value="" /></td>
                                    <td><input class="form-control" type="text" name="name" value="" /></td>
                                    <td><input class="form-control" type="text" name="name" value="" /></td>
                                    <td style="display:none;" class="ChangeBundelStatuseModalTableRemoveTd"><i id="ChangeBundelStatuseModalTableRemoveBtn" class="fas fa-minus" style="color:red;font-size:20px;display:block;cursor:pointer;width:100%;height:100%;"></i></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                </div>
            <button type="submit" class="changeStatusSubmitButtton" style="display:none;"></button>
        </div>
    </div>
</form>



