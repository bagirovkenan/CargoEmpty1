@model ICollection<CargoEmpty.Models.General.User.UserDb>
@{
    ViewBag.Title = "CreateIndex";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}

<div class="col-lg-12 col-md-12 col-12" id="OrdersIndexMainDiv">
    <div class="row">




        <div class="col-lg-12 col-md-12 col-12" style="overflow-x: auto;overflow-y: auto;margin-top:10px;" id="OrdersJsonTabelMainDiv">
            @*  <button class="test">test</button>*@
            <table class="table table-bordered" style="width:100%;">
                <thead style="background-color:red;color:white;">
                    <tr>
                        <th>
                            @Html.DisplayName("Cust_ID")
                        </th>
                        <th>
                            @Html.DisplayName("Cust_Code")
                        </th>
                        <th>
                            @Html.DisplayName("Custumer")
                        </th>
                        <th>
                            @Html.DisplayName("User Name")
                        </th>
                        <th>
                            @Html.DisplayName("Email")
                        </th>
                        <th>
                            @Html.DisplayName("Balance")
                        </th>
                        <th>
                            @Html.DisplayName("Bonuce Balnce")
                        </th>
                        <th>
                            @Html.DisplayName("Actions")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var i in Model)
                        {
                           
                    <tr>
                        <td>
                            @i.Id
                        </td>
                        <td>
                            @i.UserCod
                        </td>
                        <td>
                            @i.FirstName @i.LastName
                        </td>
                        <td>
                            @i.UserName
                        </td>
                        <td>
                            @i.Mail
                        </td>
                        <td>
                            @i.Balance
                        </td>
                        <td>
                            @i.BonusBalance
                        </td>
                        <td>
                            <a href="/Bundel/Create/@i.Id"><button class="btn btn-warning">Process</button></a>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
