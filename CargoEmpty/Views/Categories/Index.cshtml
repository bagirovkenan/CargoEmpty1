@model IEnumerable<CargoEmpty.Models.General.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}


<div class="col-lg-12 col-12  AminIndexPages" id="AdminNews" style="width:100%;height:auto;">

    <div class="row">
        <div class="col-lg-12 col-12">

            <table class="table table-bordered" style="width:100%;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>

                        <td>
                            <a class="btn btn-primary" type="button" href="/Categories/Edit/@item.Id">Edit</a>
                            <a class="btn btn-danger" type="button" href="/Categories/Delete/@item.Id">Delete</a>

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <a href="/Categories/Create"><button type="button" class="btn btn-secondary">Yenisini yarat</button></a>
</div>