@model IEnumerable<CargoEmpty.Models.General.Country>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";

    string isActive;
    string ActivClass;
}

<div class="col-lg-12 col-12  AminIndexPages" id="AdminNews" style="width:100%;height:auto;">

    <div class="row">
        <div class="col-lg-12 col-12">

            <table class="table table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th scope="col">Country Name</th>
                        <th scope="col">isActive</th>
                        <th scope="col">Editing</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        if (item.IsActive)
                        {
                            isActive = "checked";
                            ActivClass = "Activ";
                        }
                        else
                        {
                            isActive = "";
                            ActivClass = "DeActiv";

                        }






                        <tr class="ss">
                            <td>@item.CauntryName</td>
                            <td>
                                <div class="CheckBoxCountry">
                                    <input type="checkbox" data-id="@item.Id" class="@ActivClass" id="@item.Id" name="IsActive" @isActive>
                                </div>
                            </td>
                            <td>
                                <button type="button" class="btn btn-info btn-sm CountryDetailsBtn" data-toggle="modal" data-target="#CountryDetailsModalLong" id="@item.Id">Details/Edit</button>
                                <button class="btn btn-danger btn-sm CountryDeleteBtn" data-toggle="modal" data-target="#CountryDeleteModal" id="@item.Id">Delete</button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
    <button type="button" id="SaveActiveCountryBtn" class="btn btn-primary">Yadda saxla</button>
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#CountryCreateModal">Yenisini yarat</button>
    @Html.Partial("Create")

    @*  ========================================================================================*@
    <div class="modal fade" id="CountryDetailsModalLong" tabindex="-1" role="dialog" aria-labelledby="CountryDetailsModalLongLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="CaruselDetailsModalLongLabel">About</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="CountryeditPartialModal">
                </div>
            </div>
        </div>
    </div>

    @* ========================================================================================*@

    @*  ========================================================================================*@
    <div class="modal fade" id="CountryDeleteModal" tabindex="-1" role="dialog" aria-labelledby="CountryDeleteModalLabel" aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="CountrydeletePartialModal">

                </div>
            </div>
        </div>
    </div>

    @* ========================================================================================*@


</div>
@section CaruselScript
{
    <script type="text/javascript" src="~/JavaScript/Country.js"></script>

}

