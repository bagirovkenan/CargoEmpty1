                        <div class="col-lg-4 col-12">
                            <label>Instagram</label>
                            <div>
                                <input class="form-control" type="text" name="InstagramAdress" value="" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-12">
                            <label>Youtube</label>
                            <div>
                                <input class="form-control" type="text" name="YoutubeAdress" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-12" style="margin-top:10px;">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>