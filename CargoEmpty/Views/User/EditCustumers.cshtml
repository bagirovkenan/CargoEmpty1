@model CargoEmpty.Models.General.User.UserDb
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}

<div class="col-lg-10 col-10 offset-lg-1 usereditMainDiv" style="width:100%;height:auto">
    <div class="col-lg-12 col-12">
        <form action="/User/EditCustumers" method="post" class="form-grop">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="row">
                <div class="col-12 col-lg-12">
                    <label>Musderi Codu <span>@Model.UserCod</span></label>
                </div>
                <div class="col-lg-4 col-12">
                    <label>Musderi Adi</label>
                    <div>
                        <span class="form-control">@Model.FirstName</span>
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <label>Musderi Soy Adi</label>
                    <div>
                        <span class="form-control">@Model.LastName</span>
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <label>Isdifadeci Adi</label>
                    <div>
                        <span class="form-control">@Model.UserName</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-12">
                    <label>Adress</label>
                    <div>
                        <span class="form-control">@Model.Adress</span>
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <label>Email</label>
                    <div>
                        <span class="form-control">@Model.Mail</span>
                    </div>
                </div>
                <div class="col-lg-4 col-12">
                    <label>Telefon Nomresi</label>
                    <div>
                        <span class="form-control">@Model.PhoneNumber</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-12">
                    <label>Vesiqeninn Seriyasi</label>
                    <div>
                        <span class="form-control">@Model.IDCardNumber</span>
                    </div>
                </div>
                <div class="col-lg-6 col-12">
                    <label>FIN Nomre</label>
                    <div>
                        <span class="form-control">@Model.FINNumber</span>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-6 col-sm-4 col-12">
                    <span>Qara Siyahi</span>
                    <div>
                        <select class="form-control" name="BlackList">
                            <option value="false">DeActiv</option>
                            <option value="true">Activ</option>
                        </select>
                    </div>
                </div>

                <div class="col-lg-6 col-sm-4 col-12">
                    <span>VIP Client</span>
                    <div>
                        <select class="form-control" name="ss">
                            <option value="false">DeActiv</option>
                            <option value="true">Activ</option>
                        </select>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
