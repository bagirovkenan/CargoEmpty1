@model CargoEmpty.Models.General.User.UserDb
@{
    ViewBag.Title = "CustumerDetails";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}
<div class="col-lg-12 col-12">
    <div class="row">
        <div class="col-lg-12 col-12 CustumersDetailsMainDiv" style="position:relative;">
            <div class="row">
                <div class="col-lg-7 col-md-7 col-12 CustumersDetailsCustumersInformation" style="margin-top:5px;">
                    <div class="UserDetailsAdmin">
                        <span class="form-control">@Model.FirstName @Model.LastName | ID-@Model.Id | UserCod-@Model.UserCod | Balanc-@Model.Balance | Bonuc-@Model.BonusBalance </span>
                        <input type="hidden" name="" value="@Model.Id" id="DecsUsrID" />
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-6 col-12" style="margin-top:5px;">
                    <a href="/Bundel/Create/@Model.Id"><button data-id="@Model.Id" id="AdminCustumerDeclerationBtn" class="btn btn-danger" style="width:100%;box-shadow:unset;" type="button" data-toggle="modal" data-target=".bd-example-modal-xl">Process</button></a>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-12" style="margin-top:5px;">
                    <div class="col-lg-12 col-md-12 col-12  CustumersDetailsMenyMainDiv" style="position:relative;">
                        <button id="menyuButton" class="btn btn-danger" style="width:100%;">Menyu <i class="fas fa-bars float-right"> </i></button>
                        <ul id="accauntsettingUl">
                            <li data-action="/JsonResult/CustumerInfo" data-id="@Model.Id" class="CustumerInfoActions">Sexsi Melumat</li>
                            <li data-action="/JsonResult/CustumerOrders" data-id="@Model.Id" class="CustumerInfoActions">Sifarisler</li>
                            <li data-action="/JsonResult/CustumerDecleration" data-id="@Model.Id" class="CustumerInfoActions">Beyannameler</li>
                            <a href="/Balance/Details/@Model.Id"><li data-id="@Model.Id" class="CustumerInfoActions">Balans Emeliyyatlari</li></a>
                            <li data-action="/JsonResult/CustumerMessages" data-id="@Model.Id" class="CustumerInfoActions">Mesajlar</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-lg-12 col-md-12 col-12 CustumersDetailsActionsMainDiv">
            <input type="hidden" name="UserID" value="@Model.Id" id="CustumerId" />
            <div class="row">
                <div class="col-lg-12 col-md-12 col-12 CustumersDetailsActions" id="CustumersDinamikChangeInfo">
                    <div class="row">
                        @*bura ajaxs ile dinamik dolacaq*@

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modalParentDiv">
    @*modal*@
    <!-- Button trigger modal -->
    <button id="CustumerDetailsModalBtn" type="button" class="btn btn-primary " data-toggle="modal" data-target="#exampleModalCenter" style="display:none;">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" id="CustumersDetailsFormParentDiv">
                <form action="/User/Delete" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="AdminCutumersDetailsModalBody">

                        </div>
                        <div class="AdminCutumersDetailsModalBodyUserID">

                        </div>
                    </div>

                    <div class="modal-footer" style="border-top:none;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @*modal*@
</div>


<button id="DecIndexModalBtn" type="button" class="btn btn-primary " data-toggle="modal" data-target=".bd-example-modal-xl" style="display:none;">
    Launch demo modal
</button>
<div class="modal fade bd-example-modal-xl" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document" style="max-width:700px;">
        <div class="modal-content" id="DecIndexModalFormParentDiv">
            <form action="/JsonResult/Edite" method="post">
                <div class="modal-header" style="border-bottom:none;">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="AdminDecIndexModalBody">

                    </div>
                </div>

                <div class="modal-footer" style="border-top:none;">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section AdminCustumer
{
    <script type="text/javascript" src="~/JavaScript/AdminCustumerDetails.js"></script>

}
