@model CargoEmpty.Models.General.User.UserDb
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}

<div class="col-lg-10 col-10 offset-lg-1 usereditMainDiv" style="width:100%;height:auto">
    <div class="row">
        <div class="col-lg-12 col-12">
            <div class="row">
                <div class="col-lg-4 col-sm-4 col-12">
                    <span>Ad</span>
                    <div>
                        <span class="form-control">@Model.FirstName</span>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-4 col-12">
                    <span>Soy Ad</span>
                    <div>
                        <span class="form-control">@Model.LastName</span>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-4 col-12">
                    <span>Yas</span>
                    <div>
                        <span class="form-control">@Model.Age</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-sm-4 col-12">
                    <span>Email</span>
                    <div>
                        <span class="form-control">@Model.Mail</span>
                    </div>
                </div>
                <div class="col-lg-6 col-sm-4 col-12">
                    <span>Telefon</span>
                    <div>
                        <span class="form-control">@Model.PhoneNumber</span>
                    </div>
                </div>
                <div class="col-lg-12 col-sm-4 col-12">
                    <span>Adres</span>
                    <div>
                        <span class="form-control">@Model.Adress</span>
                    </div>
                </div>
            </div>
            <form action="/User/EditUser" method="post" class="form-group">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="row">
                    <div class="col-lg-6 col-sm-4 col-12" style="margin-top:30px;">
                        <span>Isdifadeci Statuslari</span>
                        <div>
                         
                            <div class="dropdown " style="width:100%;">
                                <button class="btn btn-danger dropdown-toggle" type="button" data-toggle="dropdown" style="width:100%;">

                                    <span class="caret">Statusu Sil</span>
                                </button>
                                <ul class="dropdown-menu" style="width:80%;">
                                    @foreach (var i in ViewBag.UserRole)
                                    {
                                        if (Model.Id == i.UserDbId)
                                        {
                                           
                                            <li id="checkedLi"><input type="checkbox" name="" value="@i.Id" data-Id="@i.Id" class="DeleteCheckedRole" />@i.Role.RoleName</li>

                                        }

                                    }
                                </ul>
                            </div>
                      
                        </div>
                        </div>
                    <div class="col-lg-6 col-sm-6 col-12" style="margin-top:30px;">
                        <span>Elave edilecek Statuslar</span>
                        <div class="dropdown" style="width:100%;">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="width:100%;">

                                <span class="caret">Statusu Artir</span>
                            </button>
                            <ul class="dropdown-menu" style="width:80%;">
                                @{
                                    foreach (var i in ViewBag.Rols)
                                    {

                                        <li id="checkedLi"><input type="checkbox" name="" value="@i.Id" data-Id="@i.Id" class="CheckedRole" />@i.RoleName</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:30px;">
                    <div class="col-12 col-lg-12">
                        <button type="submit" class="btn btn-danger" style="margin-top:30px;">Yadda Saxla</button>
                    </div>
                </div>
                <div class="HiddenDiv" id="UserRolesDiv">

                </div>
            </form>
        </div>
    </div>
</div>

@section AdminUserEdit
{
    <script type="text/javascript" src="~/JavaScript/AdminUserEdit.js"></script>

}

