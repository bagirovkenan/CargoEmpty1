@model IEnumerable<CargoEmpty.Models.General.MyAddress>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}




<table class="table table-bordered" style="width:100%;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country.CauntryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine1)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CauntryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a href="/MyAddresses/Edit/@item.Id"><button type="button" class="btn btn-primary">Edit/Details</button></a>
                <a href="/MyAddresses/Delete/@item.Id"><button type="button" class="btn btn-danger">Delete</button></a>

            </td>
        </tr>
    }

</table>
