@model CargoEmpty.Models.Pages.Shop.ShopDb

<div class="form-group">
    <label class="control-label col-md-2">Magaza Adi: </label>
    <div class="col-md-10">
        <span id="ShopDeLeteModalShopName" name="Text" class="form-control" style="max-width:360px;height:auto;">@Model.ShopName</span>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">Link: </label>
    <div class="col-md-10">
        <span id="ShopDeLeteModalLink" name="Text" class="form-control" style="max-width:360px;height:auto;">@Model.Link</span>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">Link: </label>
    <div class="col-md-10">
        <span id="ShopDeLeteModalCategory" name="Text" class="form-control" style="max-width:360px;height:auto;">@Model.Category.CategoryName</span>
    </div>
</div>
<div class="form-group">
    <label class="control-label col-md-2">Magaza Sekili: </label>
    <div class="col-md-10">
        <img src="@Model.ImagePath" alt="Alternate Text" style="width:50%;height:100px;" />
    </div>
</div>
<div>
    <p>
        <span style="color:red">Diqqet!!!</span> <button class="btn btn-danger" type="button">Delete</button> Melumati Silecek<br />
        ve Geri Qaytarmaq Mumkun Deyil
    </p>
</div>
<form class="form-group" action="/Shops/DeletePost" method="post">
    <input readonly type="hidden" id="ShopDeleteModalId" name="id" value="@Model.Id" />
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger" data-id="">Delete</button>
    </div>
</form>
