@model IEnumerable<CargoEmpty.Models.Pages.Shop.ShopDb>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";
}



<div class="col-lg-12 col-12 AminIndexPages" id="AdminSops" style="max-width:100%;height:auto;">

    <div class="row">
        <div class="col-lg-12 col-12">

            <table class="table table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th scope="col">Shop Name</th>
                        <th scope="col">Link</th>
                        <th scope="col">Category</th>
                        <th scope="col">IsActive</th>
                        <th scope="col">Editing</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        string ItemClass;
                        string ItemSelected;
                        string ItemeText;
                        if (i.IsActive == true)
                        {
                            ItemClass = "Activ";
                            ItemSelected = "checked";
                        }
                        else
                        {
                            ItemClass = "DeActiv";
                            ItemSelected = "";
                        }


                        <tr class="ss">

                            <td>@i.ShopName</td>
                            <td> @i.Link</td>
                            <td> @i.Category.CategoryName</td>


                            <td>
                                <div class="CheckBoxShops">
                                    <input type="checkbox" data-id="@i.Id" class="@ItemClass" id="ss" name="IsActive" @ItemSelected>
                                </div>
                            </td>
                            <td>
                                <a href="/Shops/Edit/@i.Id"><button type="button" class="btn btn-info btn-sm ShopDetailsBtn" id="@i.Id">Details/Edit</button></a>
                                <button class="btn btn-danger btn-sm ShopDeleteBtn" data-toggle="modal" data-target="#ShopDeleteModal" id="@i.Id">Delete</button>

                            </td>

                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
    <button type="button" id="SaveActiveShopBtn" class="btn btn-primary">Yadda saxla</button>
    <a href="/Shops/Create"><button type="button" class="btn btn-secondary">Yenisini yarat</button></a>



</div>

@*/////////////Faq Delete Modal ////////////////////////////*@

<div class="modal fade" id="ShopDeleteModal" tabindex="-1" role="dialog" aria-labelledby="ShopDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" id="deleteModal" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body " id="ShopDeletePartialModal">

            </div>
        </div>
    </div>
</div>

@*/////////////////////////////////////////*@





@section ShopsScript
{
    <script type="text/javascript" src="~/JavaScript/Shop.js"></script>

}
