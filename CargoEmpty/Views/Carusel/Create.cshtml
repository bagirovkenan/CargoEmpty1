<div class="modal fade" id="CaruselCreateModal" tabindex="-1" role="dialog" aria-labelledby="CaruselCreateModalLong" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CaruselCreateModalLabel">Create</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="CreatModalFormMainDiv">
                            @using (Html.BeginForm("Create", "Carusel", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <label class="form-control;">Title<span style="color:red;">*</span></label>
                                <div>
                                    <input type="text" name="Title" class="form-control creatModalInput" /><br />
                                </div>
                                <label class="">Text<span style="color:red;">*</span></label>
                                <div>
                                    <textarea class="form-control creatModalInput" name="Text"></textarea>
                                </div>
                                <label class="">Image<span style="color:red;">*</span></label>
                                <div>
                                    <input type="file" class="form-control creatModalInput" name="File" /><br />
                                </div>
                                <div>
                                    <button type="submit" class="btn btm-danger creatModalBtn">Submit</button>
                                </div>
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                            