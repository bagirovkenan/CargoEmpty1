@model IEnumerable<CargoEmpty.Models.Pages.Carusel.CaruselDb>
    @{
        var activ = 0;
        var activeClass = "";
    }

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.Count(); i++)
            {
                if (i == 0) { activeClass = "active"; }
                else { activeClass = ""; }

                <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="@activeClass"></li>
            }
        </ol>
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                if (activ == 0) { activeClass = "active"; }
                else { activeClass = ""; }
                <div class="carousel-item @activeClass" style="width:100%;height:400px;">
                    <img style="width:100%;height:400px;" src="@item.ImagePath" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Title</h5>
                        <p>@item.Text</p>
                    </div>
                </div>
                activ++;
            }


        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
