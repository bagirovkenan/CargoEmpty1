

<div class="modal fade" id="TarifCreateModal" tabindex="-1" role="dialog" aria-labelledby="TarifCreateModalLong" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TarifCreateModalLabel">Create</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="CreatModalFormMainDiv">
                            @using (Html.BeginForm("Create", "Tarif", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="form-group">
                                    <label class="form-control;">Olke Adi<span style="color:red;">*</span></label>
                                    <div class="col-md-10 col-12">
                                        <select name="CountryId" class="form-control">
                                            @foreach (var i in ViewBag.Country)
                                            {
                                                <option value="@i.Id" class="form-control">@i.CauntryName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-control;">Asagi Ceki<span style="color:red;">*</span></label>
                                    <div class="col-md-10 col-12">
                                        <input class="form-control" step=0.01 type="number" name="MinWeight" value="" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-control;">Yuxari Ceki<span style="color:red;">*</span></label>
                                    <div class="col-md-10 col-12">
                                        <input class="form-control" step=0.01 type="number" name="MaxWeight" value="" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-control;">Ceki Qiymeti<span style="color:red;">*</span></label>
                                    <div class="col-md-10 col-12">
                                        <input class="form-control" step=0.01 type="number" name="WeightPrice" value="" />
                                    </div>
                                </div>
                             
                                <div class="form-group">

                                    <button type="submit" class="btn btn-primary creatModalBtn">Save</button>
                                    <button type="button" id="TarifActivBtnCreate" class="btn btn-danger">DeActiv</button>
                                    <input id="activInput" type="hidden" name="Activ" value="false" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

