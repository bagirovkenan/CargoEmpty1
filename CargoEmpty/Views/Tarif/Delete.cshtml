@model CargoEmpty.Models.Pages.Tarif.Tarif
@{
    string isActiveClass;
    string IsActivText;
    string activinput;
    if (Model.IsActive)
    {
        activinput = "true";
        IsActivText = "Activ";
        isActiveClass = "btn btn-success";
    }
    else
    {


        isActiveClass = "btn btn-danger";
        IsActivText = "DeActiv";
        activinput = "false";

    }
}

<form action="/Tarif/Delete" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label class="form-control;">Olke Adi<span style="color:red;">*</span></label>
        <div class="col-md-10 col-12">
            <span class="form-control"> @Model.Country.CauntryName</span>
        </div>
    </div>
    <div class="form-group">
        <label class="form-control;">Valyuta<span style="color:red;">*</span></label>
        <div class="col-md-10 col-12">
            <span class="form-control"> @Model.Country.CountryCurrency.CurrencyName</span>
        </div>
    </div>
    <div class="form-group">
        <label class="form-control;">Asagi Ceki<span style="color:red;">*</span></label>
        <div class="col-md-10 col-12">
            <input readonly class="form-control" step=0.01 type="number" name="MinWeight" value="@Model.MinWeight" />
        </div>
    </div>
    <div class="form-group">
        <label class="form-control;">Yuxari Ceki<span style="color:red;">*</span></label>
        <div class="col-md-10 col-12">
            <input readonly class="form-control" step=0.01 type="number" name="MaxWeight" value="@Model.MaxWeight" />
        </div>
    </div>
    <div class="form-group">
        <label class="form-control;">Ceki Qiymeti<span style="color:red;">*</span></label>
        <div class="col-md-10 col-12">
            <input readonly class="form-control" step=0.01 type="number" name="WeightPrice" value="@Model.WeightPrice" />
        </div>
    </div>
    <div>
        <p>
            <span style="color:red">Diqqet!!! "Delete"</span> Duymesi Yuxardaki Melumarlari Silecek<br />
            ve Geri Qaytarmaq Mumkun Deyil
        </p>
    </div>

    <div class="modal-footer">
        @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
        <button type="submit" class="btn btn-danger" data-id="">Delete</button>
        <button type="button" id="TarifActivBtnEdit" class="@isActiveClass">@IsActivText</button>
        <input id="activInput" type="hidden" name="Activ" value="@activinput" />
    </div>
</form>
