@model IEnumerable<CargoEmpty.Models.Pages.Tarif.Tarif>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminShared/_AdminLayout.cshtml";

    string isActive;
    string ActivClass;
}

<div class="col-lg-12 col-12  AminIndexPages" id="AdminNews" style="width:100%;height:auto;">

    <div class="row">
        <div class="col-lg-12 col-12">

            <table class="table table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th scope="col">Country Name</th>
                        <th scope="col">Currency</th>
                        <th scope="col">Min Wight</th>
                        <th scope="col">Max Weight</th>
                        <th scope="col">Weight Price</th>
                        <th scope="col">isActive</th>
                        <th scope="col">Editing</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        if (item.IsActive)
                        {
                            isActive = "checked";
                            ActivClass = "Activ";
                        }
                        else
                        {
                            isActive = "";
                            ActivClass = "DeActiv";

                        }






                        <tr class="ss">
                            <td>@item.Country.CauntryName</td>
                            <td>@item.Country.CountryCurrency.CurrencyName</td>
                            <td>@item.MinWeight</td>
                            <td>@item.MaxWeight</td>
                            <td>@item.WeightPrice</td>
                            <td>
                                <div class="CheckBoxTarif">
                                    <input type="checkbox" data-id="@item.Id" class="@ActivClass" id="@item.Id" name="IsActive" @isActive>
                                </div>
                            </td>
                            <td>
                                <button type="button" class="btn btn-info btn-sm TarifDetailsBtn" data-toggle="modal" data-target="#TarifDetailsModalLong" id="@item.Id">Details/Edit</button>
                                <button class="btn btn-danger btn-sm TarifDeleteBtn" data-toggle="modal" data-target="#TarifDeleteModal" id="@item.Id">Delete</button>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
    <button type="button" id="SaveActiveTarifBtn" class="btn btn-primary">Yadda saxla</button>
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#TarifCreateModal">Yenisini yarat</button>
    @Html.Partial("Create")

    @*  ========================================================================================*@
    <div class="modal fade" id="TarifDetailsModalLong" tabindex="-1" role="dialog" aria-labelledby="TarifDetailsModalLongLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="TarifDetailsModalLongLabel">About</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="TarifeditPartialModal">
                </div>
            </div>
        </div>
    </div>

    @* ========================================================================================*@

    @*  ========================================================================================*@
    <div class="modal fade" id="TarifDeleteModal" tabindex="-1" role="dialog" aria-labelledby="TarifDeleteModalLabel" aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="TarifdeletePartialModal">

                </div>
            </div>
        </div>
    </div>

    @* ========================================================================================*@


</div>

@section TarifScript
{
    <script type="text/javascript" src="~/JavaScript/Tarif.js"></script>

}

