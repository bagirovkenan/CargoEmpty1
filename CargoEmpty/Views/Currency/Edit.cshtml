@model CargoEmpty.Models.General.Currency
@{
    string isActiveClass;
    string IsActivText;
    string activinput;
    if (Model.IsActive)
    {
        activinput = "true";
        IsActivText = "Activ";
        isActiveClass = "btn btn-success";
    }
    else
    {


        isActiveClass = "btn btn-danger";
        IsActivText = "DeActiv";
        activinput = "false";

    }
}

<form action="/Currency/Edit" method="post">

    <input type="hidden" id="CurrencyDetailsModalId" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label class="control-label col-md-2">Valyuta Adi:</label>
        <div class="col-md-10">
            <input type="text" id="CurrencyDetailsModalTitle" name="CurrencyName" class="form-control" value="@Model.CurrencyName">
        </div>
        <label class="form-control;">Deyer<span style="color:red;">*</span></label>
        <div  class="col-md-10">
            <input type="number" step="0.01" name="Value"  value="@Model.Value" class="form-control creatModalInput" /><br />
        </div>
    </div>
    <div class="modal-footer">
        @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
        <button type="submit" class="btn btn-primary" data-id="">Save</button>
        <button type="button" id="CurrencyActivBtnEdit" class="@isActiveClass">@IsActivText</button>
        <input id="activInput" type="hidden" name="Activ" value="@activinput" />
    </div>
</form>


