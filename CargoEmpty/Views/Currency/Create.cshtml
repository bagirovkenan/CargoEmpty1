<div class="modal fade" id="CurrencyCreateModal" tabindex="-1" role="dialog" aria-labelledby="CurrencyCreateModalLong" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CurrencyCreateModalLabel">Create</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-12">
                        <div class="CreatModalFormMainDiv">
                            @using (Html.BeginForm("Create", "Currency", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <label class="form-control;">Valyuta Adi<span style="color:red;">*</span></label>
                                <div>
                                    <input type="text" name="CurrencyName" class="form-control creatModalInput" /><br />
                                </div>
                                <label class="form-control;">Deyer<span style="color:red;">*</span></label>
                                <div>
                                    <input type="number" step="0.01" name="Value" class="form-control creatModalInput" /><br />
                                </div>
                                <div>
                                    <button type="submit" class="btn btm-danger creatModalBtn">Submit</button>
                                    <button type="button" id="CurrencyActivBtnCreate" class="btn btn-danger">DeActiv</button>
                                    <input id="activInput" type="hidden" name="Activ" value="false" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


