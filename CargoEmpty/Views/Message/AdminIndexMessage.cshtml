@model IEnumerable<CargoEmpty.Models.Message.MessageDb>

<div class="row">
    @{
        foreach (var i in Model)
        {
            <div class="col-12 col-lg-12 UserMessageContentMainDiv">
                @if (i.ToMesssageUserDbId == null && i.UserDbId != null && i.Read == false)
                {
                    <span style="font-weight:bold;">@i.Subject - @i.CreateDate</span>
                    <button data-id="@i.Id" class="btn btn-danger float-right MessageDeleteButton" style="margin:5px;font-size:14px;"><i class="far fa-trash-alt"></i></button>
                    <button data-id="@i.Id" class="btn btn-primary float-right MessageReadButton" style="margin:5px;font-size:14px;"><i class="fas fa-envelope-open-text"></i></button>
                }
                else
                {
                    <span>@i.Subject - @i.CreateDate</span>
                    <button data-id="@i.Id" class="btn btn-danger float-right MessageDeleteButton" style="margin:5px;font-size:14px;"><i class="far fa-trash-alt"></i></button>
                    <button data-id="@i.Id" class="btn btn-primary float-right MessageReadButton" style="margin:5px;font-size:14px;"><i class="fas fa-envelope-open-text"></i></button>

                }
            </div>
        }
    }
</div>

